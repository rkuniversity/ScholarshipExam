<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/logo_rku"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#49458792"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K. S. PATEL SCHOLARSHIP AWARDS EXAMINATION-2014"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="#49512475"
        android:text="PERSONAL DETAILS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="sans" />

<ScrollView 
    
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

<LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewNameOfCandiate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name :"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextNameOfCandiate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="First Name"
                android:textSize="20sp" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRowLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name :"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewResidentialAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residential Address :"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextResidentialAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address"
                android:textSize="20sp" />

        </TableRow>
         <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City   : "
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="City"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District  :"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextDistrictName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="District"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewPincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode  :"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextPincodeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="pincode"
                android:inputType="phone"
                android:maxLength="6"
                android:textSize="20sp" />

        </TableRow>
        

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewStudentEmailID "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student&apos;s Email ID : "
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextStudentEmailID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewStudentMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student&apos;s Mobile No. :  "
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextStudentMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Student Mobile number"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewParentMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent&apos;s Mobile No. : "
                android:textSize="20sp"
                
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextParentMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Parents Mobile number"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewNameOfSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Of School : "
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/editTextNameOfSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name of school"
                
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group : "
                android:textSize="20sp"
                android:typeface="serif" />

            <RadioGroup
                android:id="@+id/radioGroupOfGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioGroupA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="A"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/radioGroupB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="B"
                    android:textSize="20sp"
                    android:checked="false" />

            </RadioGroup>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textViewMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium : "
                android:textSize="20sp"
                android:typeface="serif" />

            <RadioGroup
                android:id="@+id/radioGroupOfMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioMediumEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="20sp"
                    android:checked="false"
                    android:enabled="false"/>

                <RadioButton
                    android:id="@+id/radioMediumGujarati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Gujarati"
                    android:textSize="20sp"
                    android:checked="true" 
                    android:enabled="false"/>

            </RadioGroup>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/buttonRegSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn2"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="serif" />
       
        </LinearLayout>
    </ScrollView>
    
 </LinearLayout>

